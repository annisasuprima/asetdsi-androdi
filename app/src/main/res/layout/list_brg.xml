<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/pjCv"
        android:layout_width="140dp"
        android:layout_height="210dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/white"
        android:elevation="3dp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gambar_brg"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/karpet"

                />

            <RelativeLayout
                android:id="@+id/BarangList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/nama_brg"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:hint="Sound System"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/nama_brg"
                    android:hint="20"
                    android:textColor="@color/ijau"
                    android:textColorHint="@color/ijau"
                    android:textSize="10sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/merk_brg"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"

                    android:hint="TextView"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/black"
                    android:textSize="10sp" />


                <TextView
                    android:id="@+id/nama_pjbrg"
                    android:layout_width="83dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="60dp"
                    android:gravity="center_vertical"
                    android:hint="Laboratorium Dasar Komputasi"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/ijau"
                    android:textSize="8sp" />


                <TextView
                    android:id="@+id/availablebrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="85dp"
                    android:layout_marginTop="68dp"
                    android:background="@drawable/badge"
                    android:hint="available"
                    android:padding="2dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="8sp" />


            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>