<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PengusulanMaintenenceFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:padding="10dp"
            tools:ignore="MissingConstraints"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="20dp"
                android:text="Form Pengusulan Maintenence"
                android:textAllCaps="true"
                android:textColor="@color/ijau"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:background="@color/muted"
                android:visibility="visible" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="390dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"

                android:padding="5dp"
                android:paddingStart="15dp"
                android:paddingEnd="1dp"
                android:textColorHint="@color/muted"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/ijau"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Keterangan Pengusulan"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/layout_barang_mt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <View
                    android:id="@+id/divider"
                    android:background="@color/muted"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                  />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="5dp">
                <Button
                android:id="@+id/BtnTambahBarangmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barang"
                    android:textSize="12sp"
                    android:backgroundTint="@color/abu"
                android:layout_marginStart="20dp"
                android:textColor="@color/ijau"
                android:drawableLeft="@drawable/ic_baseline_add_ijau"
                android:drawablePadding="8dp"

                >

            </Button>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <Button
                android:id="@+id/BtnTambahDoneMt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ijau"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Tambah"
                android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>