<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/pjCv"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:elevation="3dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <RelativeLayout
                android:id="@+id/BarangList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/nama_brg_maintenence"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:hint="Sound System"
                            android:lines="2"
                            android:maxLines="3"
                            android:textColor="@color/ijau"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/merk_brg_maintenence"
                            android:layout_width="168dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="30dp"
                            android:hint="Bla bla bla"

                            android:lines="2"
                            android:maxLines="3"
                            android:textColor="@color/black"
                            android:textSize="12dp"
                            android:textStyle="bold" />


                    </RelativeLayout>



                </LinearLayout>


                <ImageView
                    android:id="@+id/gambar_brg_maintenence"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/karpet" />


                <ImageView
                    android:id="@+id/dotted_line"
                    android:layout_width="150dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:layerType="software"
                    android:src="@drawable/dotted_line" />


                <TextView
                    android:id="@+id/kondisi_brg_maintenence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="95dp"
                    android:background="@drawable/badge"
                    android:backgroundTint="@color/design_default_color_error"
                    android:hint="buruk"
                    android:padding="3dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="13sp" />


            </RelativeLayout>



        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>